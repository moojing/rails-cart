 
        <% flash.each do |type, message| %>
        <div class="alert <%= bootstrap_class_for_flash(type) %> fade in text-white" >
          <button class="close" data-dismiss="alert">Ã—</button>
          <%= message %>
        </div>
        <% end %> 

        <div class="row "> 
         <div class="col-md-1 col-md-offset-10">  <%= link_to 'Create Product', new_admins_product_path ,class:'btn btn-primary' %></div>
        </div>
        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Price</th>
              <th>Stock</th>
              <th>Sku</th>
              <th>Category</th>
              <th>Create_at</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each_with_index do |product,index|%>
            <tr>
              <th scope="row"><%= product.id%></th>
              <td><%= product.name%></td>
              <td><%= product.price%></td>
              <td><%= product.stock%></td>
              <td><%= product.sku%></td>
              <% if product.categories.exists? -%>
              <td><%= product.categories[0].name%></td>
              <%else%>
              <td>-</td>
              <%end%>
              <td><%= product.created_at%></td>
              <td><%= link_to 'Edit', edit_admins_product_path(product.id) ,class:'btn btn-primary' %> 
               <%= link_to 'Delete', admins_product_path(product.id), method: :delete ,class:'btn btn-danger' , data: { confirm: 'Are you certain you want to delete this?' } %></td>
              
            </tr>
            <% end %>
          
          </tbody>
        </table>
        <div class="text-center">
            <%= paginate @products  %>
        </div>
        
      