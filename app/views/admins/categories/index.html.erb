 
        <% flash.each do |type, message| %>
        <div class="alert <%= bootstrap_class_for_flash(type) %> fade in text-white" >
          <button class="close" data-dismiss="alert">Ã—</button>
          <%= message %>
        </div>
        <% end %> 
        

        <div class="row "> 
            <div class="col-md-1 col-md-offset-10"> 
                 <%= link_to 'Create Category', new_admins_category_path ,class:'btn btn-primary' %>
            </div>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Child ID</th>
              <th>Kind</th>
              <th>Create_at</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category,index|%>
            <tr>
              <th scope="row"><%= category.id%></th>
              <td><%= category.name%></td>
              <td><%= category.child_id.nil? ? '-' : category.child_id%></td>  
              <td><%= category.kind==0 ? 'Top layer' : 'Child'%></td>
              <td><%= category.created_at%></td>
              <td><%= link_to 'Edit', edit_admins_category_path(category.id) ,class:'btn btn-primary' %> 
                
               <%= link_to 'Delete', admins_category_path(category.id), method: :delete ,class:'btn btn-danger' , data: { confirm: 'Are you certain you want to delete this?' } %></td>
              
            </tr>
            <% end %>
          
          </tbody>
        </table>
        <div class="text-center">
            <%= paginate @categories %>
        </div>
  