 

        <div class="row "> 
            <div class="col-md-1 col-md-offset-10"> 
                 <%= link_to 'Create Post', new_admins_post_path ,class:'btn btn-primary' %>
            </div>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>#</th>
             
              <th>Title</th>
              <th>Category</th>
              <th>Create_at</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each_with_index do |post,index|%>
            <tr>
              <th scope="row"><%= post.id%></th>
              <td><%= post.title %></td>
              <td><%= post.post_category ? post.post_category.title : ''%></td>
              <td><%= post.created_at%></td>
              <td><%= link_to 'Edit', edit_admins_post_path(post.id) ,class:'btn btn-primary' %> 
                
               <%= link_to 'Delete', admins_post_path(post.id), method: :delete ,class:'btn btn-danger' , data: { confirm: 'Are you certain you want to delete this?' } %></td>
              
            </tr>
            <% end %>
          
          </tbody>
        </table>
        <div class="text-center">
            <%= paginate @posts %>
        </div>
  