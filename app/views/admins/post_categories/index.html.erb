 

        <div class="row "> 
            <div class="col-md-1 col-md-offset-10"> 
                 <%= link_to 'Create Category', new_admins_post_category_path ,class:'btn btn-primary' %>
            </div>
        </div>

        <table class="table">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Create_at</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category,index|%>
            <tr>
              <th scope="row"><%= category.id%></th>
              <td><%= category.title%></td>
             
              <td><%= category.created_at%></td>
              <td><%= link_to 'Edit', edit_admins_post_category_path(category.id) ,class:'btn btn-primary' %> 
                
               <%= link_to 'Delete', admins_post_category_path(category.id), method: :delete ,class:'btn btn-danger' , data: { confirm: 'Are you certain you want to delete this?' } %></td>
              
            </tr>
            <% end %>
          
          </tbody>
        </table>
        <div class="text-center">
            <%= paginate @categories %>
        </div>
  